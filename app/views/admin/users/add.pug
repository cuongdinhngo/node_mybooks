extends ../layouts/layout.pug

block content
    div(class="col-sm-12")
        - var firstName = lastName = email = phone = address = ''
        if user
            - firstName = user.first_name
            - lastName = user.last_name
            - email = user.email
            - phone = user.phone
            - address = user.address
        form(action="/api/users/add" method="post")
            div(class="form-group row")
                label(for="name" class="col-sm-2 col-form-label") First Name:
                div(class="col-sm-10")
                    input(type="text" class="form-control" id="first_name" name="first_name" value=firstName)
            div(class="form-group row")
                label(for="name" class="col-sm-2 col-form-label") Last Name:
                div(class="col-sm-10")
                    input(type="text" class="form-control" id="last_name" name="last_name" value=lastName)
            div(class="form-group row")
                label(for="name" class="col-sm-2 col-form-label") Email:
                div(class="col-sm-10")
                    input(type="text" class="form-control" id="email" name="email" value=email)
            div(class="form-group row")
                label(for="name" class="col-sm-2 col-form-label") Phone:
                div(class="col-sm-10")
                    input(type="text" class="form-control" id="phone" name="phone" value=phone)
            div(class="form-group row")
                label(for="name" class="col-sm-2 col-form-label") Address:
                div(class="col-sm-10")
                    input(type="text" class="form-control" id="address" name="address" value=address)
            div(class="form-group row")
                label(for="name" class="col-sm-2 col-form-label") Password:
                div(class="col-sm-10")
                    input(type="text" class="form-control" id="address" name="password")
            div(class="form-group row")
                div(class="col-sm-2")
                div(class="col-sm-10")
                    button(type="submit" class="btn btn-primary") Submit
            div(class="form-group row")
                div(class="col-sm-2")
                div(class="col-sm-10")
                    if msg !== undefined
                        div(class="alert alert-primary" role="alert") #{msg}
                    if err !== undefined
                        each item in err
                            div(class="alert alert-danger" role="alert") #{item.message}
